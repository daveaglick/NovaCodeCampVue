<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Nova Code Camp Todo</title>
        <script src="//unpkg.com/vue"></script>
        <link rel="stylesheet" href="//unpkg.com/bulma/css/bulma.css">
    </head>    
    <body>
        <section class="section">
            <div class="container">
                <h1 class="title is-1 has-text-grey">Nova Code Camp Todo</h1>
                <p class="subtitle has-text-light-grey">Let's get organized!</p>
                <hr/>
                <div id="app">
                    <div class="columns">
                        <div class="column">
                            <h3 class="title is-3"><em>Todo Items</em></h2>
                        </div>
                        <div class="column">
                            <h3 class="title is-3"><em>Add An Item</em></h2>
                            <div class="field">
                                <label class="label">Title</label>
                                <div class="control">
                                    <input class="input" type="text" v-model="title">
                                </div>
                                {{ title }}
                            </div>
                            <div class="field">
                                <label class="label">Description</label>
                                <div class="control">
                                    <textarea class="textarea" v-model="description"></textarea>
                                </div>
                                {{ description }}
                            </div>
                            <button class="button is-primary">Add Item</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <script>
            new Vue({
                el: '#app',
                data: {
                    title: null,
                    description: null
                }
            });
        </script>
    </body>
</html>