<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Nova Code Camp Todo</title>
        <script src="//unpkg.com/vue"></script>
        <link rel="stylesheet" href="//unpkg.com/bulma/css/bulma.css">
        <style>
            .table th, .table td {
                width: 30%;
            }
        </style>
    </head>    
    <body>
        <section class="section">
            <div class="container">
                <h1 class="title is-1 has-text-grey">Nova Code Camp Todo</h1>
                <p class="subtitle has-text-light-grey">Let's get organized!</p>
                <hr/>
                <div id="app">
                    <div class="columns">
                        <div class="column">
                            <h3 class="title is-3"><em>Todo Items</em></h2>
                                <table class="table is-fullwidth">
                                    <thead>
                                        <tr>
                                            <th>Title</td>
                                            <th>Description</td>
                                            <th></td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr v-for="(item, index) in items">
                                            <td class="has-text-weight-bold is-size-4">
                                                {{ item.title }}
                                            </td>
                                            <td style="white-space: pre;">{{ item.description }}</td>
                                            <td>
                                                <button class="button is-success">Done!</button>
                                                <button class="button is-danger">Remove</button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                        </div>
                        <div class="column">
                            <h3 class="title is-3"><em>Add An Item</em></h2>
                            <div class="field">
                                <label class="label">Title</label>
                                <div class="control">
                                    <input class="input" type="text" v-model="title">
                                </div>
                            </div>
                            <div class="field">
                                <label class="label">Description</label>
                                <div class="control">
                                    <textarea class="textarea" v-model="description"></textarea>
                                </div>
                            </div>
                            <button class="button is-primary" v-on:click="add">Add Item</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <script>
            new Vue({
                el: '#app',
                data: {
                    title: null,
                    description: null,
                    items: []
                },
                methods: {
                    add: function() {
                        // Create and add the new item
                        var item = {
                            title: this.title,
                            description: this.description
                        };
                        this.items.push(item);

                        // Reset the entry state
                        this.title = null;
                        this.description = null;
                    }
                }
            });
        </script>
    </body>
</html>